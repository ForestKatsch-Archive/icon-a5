	<dep>-245</dep>
      </entry>
    </interpolation>
    <center>
      <x-m>-2.1053</x-m>
      <y-m>-0.255</y-m>
      <z-m>-0.308392</z-m>
    </center>
    <axis>
      <x>0.9275984563424636</x>
      <y>0</y>
      <z>0.07240154365753637</z>
    </axis>
  </animation>

  <!-- Knobs -->
  
  <animation>

    <type>knob</type>
    <object-name>altimeter knob</object-name>
    <property>instrumentation/altimeter/setting-inhg</property>
    <factor>-10</factor>

    <center>
      <x-m>-2.1046</x-m>
      <y-m>-0.27</y-m>
      <z-m>-0.243281</z-m>
    </center>
    <axis>
      <x>0.9275984563424636</x>
      <y>0</y>
      <z>0.07240154365753637</z>
    </axis>

    <action>
      <binding>
	<command>property-adjust</command>
	<property>instrumentation/altimeter/setting-inhg</property>
	<factor>0.01</factor>
	<min>24.0</min>
	<max>34.0</max>                
	<wrap>false</wrap>
      </binding>
    </action>

    <hovered>
      <binding>
	<command>set-tooltip</command>
	<tooltip-id>altimeter-setting</tooltip-id>
	<label>Altimeter inHg: %5.2f</label>
	<property>instrumentation/altimeter/setting-inhg</property>
      </binding>
    </hovered>

  </animation>

  <!-- CENTER CONSOLE-->

  <!-- Gear switch -->

  <animation>
    <type>rotate</type>
    <object-name>gear switch</object-name>
    <property>controls/gear/gear-down</property>
    <factor>50</factor>
    <center>
      <x-m>-2.06003</x-m>
      <y-m>-0.02</y-m>
      <z-m>-0.4067583</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>gear switch</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
	<command>property-toggle</command>
	<property>controls/gear/gear-down</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <label>Gear is %s</label>
        <measure-text>Gear is down</measure-text>
        <tooltip-id>gear</tooltip-id>
        <property>controls/gear/gear-down</property>
	<mapping>nasal</mapping>
	<script>
	  if(arg[0] == 1)
            return "down";
          return "up";
	</script>
      </binding>
    </hovered>
  </animation>

  <!-- Key -->

  <animation>

    <type>knob</type>
    <object-name>key</object-name>
    <property>controls/key</property>
    <factor>-30</factor>
    <center>
      <x-m>-2.18</x-m>
      <y-m>-0.484</y-m>
      <z-m>-0.39</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>

    <action>
      <binding>
	<command>property-adjust</command>
	<property>controls/key</property>
	<min>0</min>
	<max>4</max>
	<wrap>false</wrap>
      </binding>
    </action>

    <release>
      <binding>
	<command>nasal</command>
	<script>
	  if(getprop("/controls/key") == 4)
	    setprop("/controls/key",3)
	</script>
      </binding>
    </release>

    <hovered>
      <binding>
	<command>set-tooltip</command>
	<label>Key is %s</label>
        <tooltip-id>key</tooltip-id>
	<property>controls/key</property>
	<mapping>nasal</mapping>
	<script>
	  var modes=["off","set to left magnetos","set to right magnetos","set to both magnetos","set to start"];
	  return(modes[arg[0]]);
	</script>
      </binding>
    </hovered>

  </animation>

