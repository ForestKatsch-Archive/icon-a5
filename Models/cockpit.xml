  <!-- MAIN GAUGES -->

  <!-- AOA -->

  <animation>
    <type>rotate</type>
    <object-name>aoa needle</object-name>
    <property>orientation/alpha-deg</property>
    <interpolation>
      <entry>
	<ind>-6</ind>
	<dep>25</dep>
      </entry>
      <entry>
	<ind>0</ind>
	<dep>0</dep>
      </entry>
      <entry>
	<ind>15</ind>
	<dep>-50</dep>
      </entry>
    </interpolation>
    <center>
      <x-m>-2.1538</x-m>
      <y-m>-0.286</y-m>
      <z-m>-0.171732</z-m>
    </center>
    <axis>
      <x>0.9275984563424636</x>
      <y>0</y>
      <z>0.07240154365753637</z>
    </axis>
  </animation>

  <!-- Airspeed -->

  <animation>
    <type>rotate</type>
    <object-name>airspeed needle</object-name>
    <property>instrumentation/airspeed-indicator/indicated-speed-kt</property>
    <interpolation>
      <entry>
	<ind> 0</ind>
	<dep> 0</dep>
      </entry>
      <entry>
	<ind> 20</ind>
	<dep> 0</dep>
      </entry>
      <entry>
	<ind> 140</ind>
	<dep>-300</dep>
      </entry>
    </interpolation>
    <center>
      <x-m>-2.1197</x-m>
      <y-m>-0.359</y-m>
      <z-m>-0.215473</z-m>
    </center>
    <axis>
      <x>0.9275984563424636</x>
      <y>0</y>
      <z>0.07240154365753637</z>
    </axis>
  </animation>

  <!-- Altimeter -->

  <animation>
    <type>rotate</type>
    <object-name>altimeter 100 needle</object-name>
    <property>instrumentation/altimeter/indicated-altitude-ft</property>
    <factor>-0.36</factor>
    <center>
      <x-m>-2.1197</x-m>
      <y-m>-0.241</y-m>
      <z-m>-0.215473</z-m>
    </center>
    <axis>
      <x>0.9275984563424636</x>
      <y>0</y>
      <z>0.07240154365753637</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>altimeter 1000 needle</object-name>
    <property>instrumentation/altimeter/indicated-altitude-ft</property>
    <factor>-0.036</factor>
    <center>
      <x-m>-2.1197</x-m>
      <y-m>-0.241</y-m>
      <z-m>-0.215473</z-m>
    </center>
    <axis>
      <x>0.9275984563424636</x>
      <y>0</y>
      <z>0.07240154365753637</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>altimeter adjustment legend</object-name>
    <property>instrumentation/altimeter/setting-inhg</property>
    <interpolation>
      <entry>
	<ind>24.0</ind>
	<dep>150</dep>
      </entry>
      <entry>
	<ind>34.0</ind>
	<dep>-150</dep>
      </entry>
    </interpolation>
    <center>
      <x-m>-2.1197</x-m>
      <y-m>-0.241</y-m>
      <z-m>-0.215473</z-m>
    </center>
    <axis>
      <x>0.9275984563424636</x>
      <y>0</y>
      <z>0.07240154365753637</z>
    </axis>
  </animation>

  <!-- Fuel -->

  <animation>
    <type>rotate</type>
    <object-name>fuel needle</object-name>
    <property>consumables/fuel/tank[0]/level-gal_us</property>
    <interpolation>
      <entry>
	<ind>0</ind>
	<dep>0</dep>
      </entry>
      <entry>
	<ind>20</ind>
	<dep>-240</dep>
      </entry>
    </interpolation>
    <center>
      <x-m>-2.1082</x-m>
      <y-m>-0.434</y-m>
      <z-m>-0.28047</z-m>
    </center>
    <axis>
      <x>0.9275984563424636</x>
      <y>0</y>
      <z>0.07240154365753637</z>
    </axis>
  </animation>

