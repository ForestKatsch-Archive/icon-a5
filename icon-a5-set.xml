<?xml version="1.0"?>

<PropertyList>

  <sim> 
    <description>Icon A5</description>
    <author>Forest Ka</author>

    <flight-model>yasim</flight-model>
    <aero>icon-a5-yasim</aero>

    <model>
      <path>Aircraft/icon-a5/Models/icon-a5-model.xml</path>
    </model>

    <sound>
      <path>Aircraft/icon-a5/Sounds/icon-a5-sound.xml</path>
    </sound>

    <view n="0">
      <internal>true</internal>
      <config>
	<x-offset-m>-0.3</x-offset-m>
	<y-offset-m> -0.1</y-offset-m>
	<z-offset-m>-1.4</z-offset-m>
	<default-field-of-view-deg type="double">65</default-field-of-view-deg>
	<pitch-offset-deg>-5</pitch-offset-deg>
      </config>
    </view>

    <weight n="0">
      <name>Pilot</name>
      <weight-lb>200</weight-lb>
      <max-lb>300</max-lb>
    </weight>

    <weight n="1">
      <name>Passenger</name>
      <weight-lb>0</weight-lb>
      <max-lb>300</max-lb>
    </weight>

    <weight n="2">
      <name>Baggage</name>
      <weight-lb>0</weight-lb>
      <max-lb>60</max-lb>
    </weight>

  </sim>

  <consumables>
    <fuel>
      <tank n="0">
	<name>Main</name>
	<capacity-gal_us type="double">20</capacity-gal_us>
	<level-gal_us type="double">20</level-gal_us>
	<selected type="bool">true</selected>
      </tank>
    </fuel>
  </consumables>

  <electrical>
    <path></path>
    <devices>
      <avionics>
	<status type="string">off</status>
	<current type="double">0.0</current> <!-- Amps pulled at the moment; if status isn't on this==0 -->
	<max-current type="double">10.0</max-current> <!-- max amps (will instantly trip after this) -->
      </avionics>
      <bilge> <!-- "misc" -->
	<status type="string">off</status>
	<current type="double">20.0</current>
	<max-current type="double">5.0</max-current>
      </bilge>
      <hydraulic> <!-- pump -->
	<status type="string">off</status>
	<current type="double">25.0</current>
	<max-current type="double">30.0</max-current>
      </hydraulic>
      <lights>
	<status type="string">off</status>
	<current type="double">10.0</current>
	<max-current type="double">15.0</max-current>
      </lights>
    </devices>
    <lights>
      <seawings>
	<status type="string">off</status>
	<current type="double">1</current> <!-- Amps pulled when on -->
      </seawings>
      <headlights>
	<status type="string">off</status>
	<current type="double">10</current> <!-- Amps pulled when on -->
      </headlights>
      <taxi>
	<status type="string">off</status>
	<current type="double">2</current> <!-- Amps pulled when on -->
      </taxi>
      <cockpit>
	<status type="string">off</status>
	<current type="double">1</current> <!-- Amps pulled when on -->
      </cockpit>
    </lights>
  </electrical>

  <controls>
    <gear>
      <brake-parking type="double">1</brake-parking>
    </gear>
    <switches>
      <seawings type="int">0</seawings>
      <headlights type="int">0</headlights>
      <taxi type="int">0</taxi>
      <cockpit type="int">0</cockpit>
      <bilge type="int">0</bilge>
    </switches>
  </controls>

  <nasal>
    <electrical>
      <file>Aircraft/icon-a5/Nasal/electrical.nas</file>
    </electrical>
  </nasal>

</PropertyList>